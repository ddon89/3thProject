<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clear_map_info_box"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal"
    android:background="@drawable/clear_map_info"
    android:layout_marginRight="2dp">

    <ImageView
        android:id="@+id/clear_map_info_box_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/escaperoom_img1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">
        <TextView
            android:id="@+id/clear_map_info_box_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Map title"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/clear_map_info_box_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/clear_map_info_box_title"
            android:layout_below="@+id/clear_map_info_box_title"
            android:text="★★★☆☆"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/clear_map_info_box_time"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="00 : 00 : 00"
            android:textStyle="bold"
            android:textColor="#ff0000"
            android:textSize="20sp"
            />

    </RelativeLayout>

</LinearLayout>
